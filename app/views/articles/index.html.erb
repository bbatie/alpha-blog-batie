<h1>Articles Listing Page</h1>



<% @articles.each do |article| %>

    <div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= article.title  %></h5>
      <p class="card-text"> <%= article.description %> </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= link_to 'Show', article_path(article) %></li>
      <li class="list-group-item"><%= link_to 'Edit', edit_article_path(article) %></li>
      <li class="list-group-item"> <%= link_to("Delete", article, data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want to delete article: " + article.title + "?"
        })%></li>
    </ul>
    <div class="card-body">
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>

  
<% end %>










<table>
    <thead>
        <tr>
        <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
            <td> <%= article.id  %></td>
                <td> <%= article.title  %></td>
                <td> <%= article.description %> </td>
                <td> <%= link_to 'Show', article_path(article) %> </td>
                <td> <%= link_to 'Edit', edit_article_path(article) %> </td>
                <td> <%= link_to("Delete", article, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete article: " + article.title + "?"
                    })%>
                     </td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
<p>
    <%= link_to 'Create New Article', new_article_path %> 
    <%= link_to 'Return to Home Page', root_path %> 
</p>
