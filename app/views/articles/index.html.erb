<h1 class="text-center mt-4">Listing All Articles</h1>


<% @articles.each do |article| %>
    <div class="container col-8" >
<div class="row mt-4"> 
      <div class="card text-center">
            <div class="card-header" style="background-color: gray;">
               <h3 class="card-title" ><%= article.title  %></h3>
            </div>

            <div class="card-body">
              <p class="card-text"><%= article.description %></p>
        
            </div>

            <div class="card-footer text-muted">
            
                <div class="card-text text-end" style="color:gray">article id: <%= article.id %> </div>

              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= link_to 'Show', article_path(article) %> | <%= link_to 'Edit', edit_article_path(article) %> |  <%= link_to("Delete", article, data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure you want to delete article: " + article.title + "?"
                  })%></li>
              </ul>
            </div>
      </div>
</div>
</div>
<% end %>











