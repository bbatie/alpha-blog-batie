<div class="container bg-info rounded shadow" >
  <div class="row justify-content-center">
    <div class="col-10 mt-4">

<% if @article.errors.any?  %>
    <h4>The following errors prevented the article from being saved </h4>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>

  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label"> <%= f.label :title %></label>
   <%= f.text_field :title, class: "form-control" %>
</div>
  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label"> <%= f.label :description %></label>
   <%= f.text_area :description, rows: 10,class: "form-control" %>
</div>

    <p>
    <%= f.submit class: "btn btn-lg btn-success" %>
    </p>

<% end %>

</div>
</div>
</div>