<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>


  <% if logged_in? && @user == current_user %>
    <div class="text-center mt-4"> 

            <%= link_to 'Edit Your Profile', edit_user_path(@user), class: "btn btn-small btn-primary" %> 
            </div> 
            <div class="text-center mt-4"> 
             <%= link_to "Create Article", new_article_path, class: "btn btn-small btn-primary" %> 
            </div>
         
            <div class="text-center mt-4"> 
             <%= link_to "Delete Account", @user, data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure you want to delete your account abd articles?"
                  }, class: "btn btn-small text-danger" %>
            </div>

             <% end %> 

<h3 class="text-center mt-4">Articles</h3>


<%= render 'articles/article' %>

